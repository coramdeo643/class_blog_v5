{{> layout/header}}

<div class="container p-5">
    <div class="card">
        <div class="card-header"><b>Edit Post</b></div>
        <div class="card-body">
            <form action="/board/{{board.id}}/update-form" method="post">
                <div class="mb-3">
                    <input type="text" class="form-control" placeholder="Enter username..."
                           name="username" value="{{board.user.username}}">
                </div>
                <div class="mb-3">
                    <input type="text" class="form-control"
                           placeholder="Enter title..."
                           name="title" value="{{board.title}}">
                </div>
                <div class="mb-3">
                    <textarea name="content" rows="5" placeholder="Enter content..."
                              class="form-control">{{board.content}}</textarea>
                </div>
                    <button class="btn btn-primary form-control">Edit</button>
            </form>
        </div>
    </div>
</div>

{{> layout/footer}}